<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--横向分割线-->
    <style name="cut_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cut_line_roughness</item>
        <item name="android:background">@color/color_cut_line</item>
    </style>

    <!--竖向分割线-->
    <style name="cut_line_vertical">
        <item name="android:layout_width">@dimen/cut_line_roughness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_cut_line</item>
    </style>

    <style name="weight_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="weight_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="dialog_button_style" parent="weight_horizontal">
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_dialog_button</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

</resources>